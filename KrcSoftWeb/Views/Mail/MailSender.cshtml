@model KrcSoftWeb.Models.DataModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Mail Gönder</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/Home/MailSender" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <input name="GonderenMaili" type="email" class="form-control" id="exampleInputEmail1" placeholder="Mail Adresiniz" required>
                </div>
                <div class="form-group">
                    <input name="Baslik" type="text" class="form-control" id="exampleInputEmail1" placeholder="Konu" required>
                </div>
                <div class="form-group">
                    <input name="Icerik" type="text" class="form-control" id="exampleInputEmail1" placeholder="Mesajınız" required />
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Gönder</button>
            </div>
        </form>
    </div>
</div>
<!-- /.card -->


