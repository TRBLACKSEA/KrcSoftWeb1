@model KrcSoftWeb.Models.DataModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="">

    <div class="page-title">
        <div class="title_left">
            <h3>Gelen Mailler</h3>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@Model.okunacakGonderilenMail.Baslik</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <!-- CONTENT MAIL -->
                        <div class="col-sm-12 mail_view">
                            <div class="inbox-body">
                                <div class="mail_heading row">
                                    <div class="col-md-12 text-right">
                                        <p class="date">@Model.okunacakGonderilenMail.GonderimTarihi</p>
                                    </div>
                                    <div class="col-md-12">
                                        <h4>@Model.okunacakGonderilenMail.GondereninAdi (@Model.okunacakGonderilenMail.GonderenMaili)</h4>
                                    </div>
                                </div>

                                <div class="view-mail">
                                    <p>@Model.okunacakGonderilenMail.Icerik</p>
                                </div>
                            </div>
                        </div>
                        <!-- /CONTENT MAIL -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /page content -->
