@model KrcSoftWeb.Models.DataModel
@{
    ViewBag.Title = "EditReferences";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Yeni Referans Ekle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/Admin/EditReferences/" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Referans Bilgilerini Giriniz</label>
                    <input name="AD" type="text" class="form-control" id="exampleInputEmail1" placeholder="Referans Adı">
                </div>
                <div class="form-group">
                        <select name="SectorID" class="form-control select2" style="width: 100%;">
                            <option value="0" selected="selected">Sektör Seçiniz</option>
                            @foreach (var item in Model.Sektorler)
                            {
                                <option value="@item.ID">@item.Adi</option>
                            }
                        </select>
                </div>
                <div class="form-group">
                    <p>Resim Seçiniz</p>
                    <input type="file" name="ResimAdres" />
                </div>
                <div class="form-check">
                    <input type="checkbox" name="Kullanimdami" value="true" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Kullanımda</label>
                </div>

            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Referans Ekle</button>
            </div>
        </form>
    </div>
</div>
<!-- /.card -->
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Referanslar</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Referans Adı</th>
                        <th>Referans Resim</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Referanslar)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.AD</td>
                            <td><img src="@item.ResimAdres" alt="@item.AD"/></td>
                            <td><a class="btn btn-success" style="color:white;" href="/Admin/UpdateReferences/@item.ID">Güncelle</a></td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>

    </div>
    <!-- /.card -->
</div>

