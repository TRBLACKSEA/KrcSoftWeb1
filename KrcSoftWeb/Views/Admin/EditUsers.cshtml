@model KrcSoftWeb.Models.DataModel
@{
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Yeni Kullanıcı Ekle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/Admin/EditUsers/" method="post">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Kullanıcı Bilgilerini Giriniz</label>
                    <input name="UserName" type="text" class="form-control" id="exampleInputEmail1" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"></label>
                    <input name="Password" type="text" class="form-control" id="exampleInputEmail1" placeholder="Şifre">
                </div>
                <div class="form-group">
                    <img src="" />
                    <p>Resim Seçiniz</p>
                    <input type="file" name="UserPhoto" />
                </div>
                <div class="form-check">
                    <input type="checkbox" name="Kullanimdami" value="true" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Kullanımda</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="IsAdmin" value="true" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Admin</label>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Kullanıcı Ekle</button>
            </div>
        </form>
    </div>
</div>
<!-- /.card -->
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kullanıcılar</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Kullanıcı Adı</th>
                        <th>Şifre</th>
                        <th>Durum</th>
                        <th>Admin</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.kullanıcılar)
                    {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.UserName</td>
                        <td>@item.Password</td>
                        @if (item.Kullanimdami)
                        {
                            <td>Kullanımda</td>
                        }
                        else
                        {
                            <td>Kullanım Dışı</td>
                        }
                        @if (item.IsAdmin)
                        {
                            <td>Admin</td>
                        }
                        else
                        {
                            <td>Admin Değil</td>
                        }
                        <td><a class="btn btn-success" style="color:white;" href="/Admin/UpdateUser/@item.ID">Güncelle</a></td>

                    </tr>
                    }


                </tbody>
            </table>
        </div>

    </div>
    <!-- /.card -->
</div>