@model KrcSoftWeb.Models.DataModel
@{
    ViewBag.Title = "ReadIncomingMails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="">

        <div class="page-title">
            <div class="title_left">
                <h3>Gelen Mailler</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@Model.okunacakMail.Baslik</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <!-- CONTENT MAIL -->
                            <div class="col-sm-12 mail_view">
                                <div class="inbox-body">
                                    <div class="mail_heading row">
                                        <div class="col-md-8">
                                            <div class="btn-group">
                                                <a class="btn btn-success" href="/Admin/AnswerIncomingMails/@Model.okunacakMail.ID"><i class="fa fa-forward"></i>Yanıtla</a>
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-right">
                                            <p class="date">@Model.okunacakMail.GonderimTarihi</p>
                                        </div>
                                        <div class="col-md-12">
                                            <h4>@Model.okunacakMail.GondereninAdi (@Model.okunacakMail.GonderenMaili)</h4>
                                        </div>
                                    </div>

                                    <div class="view-mail">
                                        <p>@Model.okunacakMail.Icerik</p>
                                    </div>
                                </div>
                            </div>
                            <!-- /CONTENT MAIL -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- /page content -->
