@model KrcSoftWeb.Models.DataModel
@{
    ViewBag.Title = "ReadIncomingMails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="">


    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@Model.okunacakServisFormu.ServisKonu</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <!-- CONTENT MAIL -->
                        <div class="col-sm-12 mail_view">
                            <div class="inbox-body">
                                <div class="mail_heading row">
                                    <div class="col-md-8">
                                    </div>
                                    <div class="col-md-12 text-left">
                                        <p class="date">@Model.okunacakServisFormu.OlusturulmaTarihi</p>
                                    </div>
                                    <div class="col-md-12">
                                        <h4>@Model.okunacakServisFormu.Isim (@Model.okunacakServisFormu.ServisTalepEdenMail)</h4>
                                    </div>

                                </div>

                                <div class="view-mail">
                                    <p>@Model.okunacakServisFormu.ServisIcerik</p>
                                </div>

                                <div class="col-md-12">
                                    <h4>Talep Edenin Telefonu : @Model.okunacakServisFormu.ServisTalepEdenTelefon</h4>
                                </div>
                            </div>
                        </div>
                        <!-- /CONTENT MAIL -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /page content -->
