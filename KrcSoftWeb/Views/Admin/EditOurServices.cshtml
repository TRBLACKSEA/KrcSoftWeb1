@model KrcSoftWeb.Models.DataModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <!-- general form elements -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Yeni Hizmet Ekle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/Admin/EditOurServices/" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div hidden>
                    <a name="ID"></a>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Hizmet Başlığı</label>
                    <input name="ServiceTitle" type="text" class="form-control" id="exampleInputEmail1" placeholder="Hizmet Adı" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Hizmet Açıklaması</label>
                    <textarea class="form-control" name="ServiceDescription" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <img src="" />
                    <p>Resim Seçiniz</p>
                    <input type="file" name="ServiceImage" required/>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Ekle</button>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">@ViewBag.EditOurServicesMesaj</label>
            </div>
        </form>
    </div>
</div>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Hizmetler</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Hizmet Başlığı</th>
                        <th>Hizmet Detayı</th>
                        <th>Görsel</th>
                        <th>Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Hizmetlerimiz)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.ServiceTitle</td>
                            <td>@item.ServiceDescription</td>
                            <td><img src="@item.ServiceImage" alt="@item.ServiceTitle" style="width:auto;height:auto;" /></td>
                            <td><a class="btn btn-success" style="color:white;" href="/Admin/UpdateOurServices/@item.ID">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.card -->
</div>

