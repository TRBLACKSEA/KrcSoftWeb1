@model KrcSoftWeb.Models.DataModel

<!-- ======= Hero Section ======= -->
<section id="hero">
    <div class="hero-container">
        <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

            <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

            <div class="carousel-inner" role="listbox">

                @for (int i = 0; i < Model.sliderItems.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active" style="background-image: url('@Model.sliderItems[i].SliderImage'); ">
                            <div class="carousel-container">
                                <div class="carousel-content container">
                                    <h2 class="animate__animated animate__fadeInDown">@Model.sliderItems[i].SliderTitle</h2>
                                    <p class="animate__animated animate__fadeInUp">@Model.sliderItems[i].SliderDescription</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
            <div class="carousel-item" style="background-image: url('@Model.sliderItems[i].SliderImage'); ">
                <div class="carousel-container">
                    <div class="carousel-content container">
                        <h2 class="animate__animated animate__fadeInDown">@Model.sliderItems[i].SliderTitle</h2>
                        <p class="animate__animated animate__fadeInUp">@Model.sliderItems[i].SliderDescription</p>
                    </div>
                </div>
            </div>
                    }
                }


            </div>

            <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
            </a>

        </div>
    </div>
</section><!-- End Hero -->

