@model KrcSoftWeb.Models.DataModel
@{
    ViewBag.Title = "References";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ======= Our Portfolio Section ======= -->
<section id="portfolio" class="portfolio section-bg">
    <div class="container" data-aos="fade-up" data-aos-delay="50">
        <div class="section-title">
            <h2>Referanslarımız</h2>
            <!--<p>Magnam dolores commodi suscipit. Necessitatibus eius consequatur ex aliquid fuga eum quidem. Sit sint consectetur velit. Quisquam quos quisquam cupiditate. Et nemo qui impedit suscipit alias ea. Quia fugiat sit in iste officiis commodi quidem hic quas.</p>-->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">Hepsi</li>
                    @foreach (var item in Model.Sektorler)
                    {
                        <li data-filter=".@item.Filtre">@item.Adi</li>
                    }

                </ul>
            </div>
        </div>

        <div class="row portfolio-container">

            @for (int i = 0; i < Model.Referanslar.Count; i++)
            {
                <div class="col-lg-3 col-md-6 portfolio-item @Model.SektorFiltreAdlari[i]">
                    <div>
                        <img src="@Model.Referanslar[i].ResimAdres" class="img-fluid" alt="@Model.Referanslar[i].AD">
                    </div>
                </div>
            }

        </div>

    </div>
</section><!-- End Our Portfolio Section -->